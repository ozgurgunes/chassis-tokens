{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-var": "error",
    "no-return-await": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "prefer-template": "error",
    "semi": [
      "error",
      "never"
    ]
  }
}
